{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "python",
            "request": "launch",
            "name": "Debug File",
            "program": "${file}"
        },
        {
            "name": "tests",
            "type": "python",
            "request": "launch",
            "console": "integratedTerminal",
            "pythonPath": "${workspaceRoot}/venv/Scripts/python.exe",
            "module": "pytest",
            "args": ["tests.py"],
            "cwd": "${workspaceRoot}"
        }
    ]
}